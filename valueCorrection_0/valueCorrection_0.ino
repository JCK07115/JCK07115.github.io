void setup(void) {
  
#ifndef ESP8266
  while (!Serial);     // will pause Zero, Leonardo, etc until serial console opens
#endif
  Serial.begin(9600);

  if(!lsm.begin()) {

    //there was a problem detecting the sensor, re-check wiring
    Serial.print(F("Ooops, no LSM9DS0 detected ... Check your wiring or I2C ADDR!"));
    while(1);
  }
  Serial.println(F("Found LSM9DS0 9DOF"));
  
  //displaySensorDetails();

  //set up the sensor gain and integration time;
  configureSensor();

  Serial.println("");
}

void loop(void) {

//lsm.getEvent(&accel, &mag, &gryo, &temp);

  lsm.readAccel();
  Serial.println(lsm.accelData.x);
  Serial.println(lsm.accelData.x);
  Serial.println(lsm.accelData.x);

  A[0][0] = 1.1070; A[0][1] = -0.0255; A[0][2] = -0.0729;
  A[1][0] = 0.1121; A[1][1] =  0.9867; A[1][2] = -0.0620;
  A[2][0] = 0.1580; A[2][1] = -0.1240; A[2][2] =  1.0590;
  
  B[0][0] = lsm.accelData.x;
  B[1][0] = lsm.accelData.y;
  B[2][0] = lsm.accelData.z;

  Matrix.Multiply((float*) A, (float*) B, N, N, 1, (float*) C);
  Matrix.Print((float*) C, N, 1, "C");
  delay(1000);
}
